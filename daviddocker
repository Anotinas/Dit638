FROM jjanzic/docker-python3-opencv
MAINTAINER David Lindgren "guslindaaq@student.gu.se"

RUN [ "cross-build-start" ]
RUN cat /etc/apk/repositories && \
    echo http://dl-4.alpinelinux.org/alpine/v3.7/main > /etc/apk/repositories && \
    echo http://dl-4.alpinelinux.org/alpine/v3.7/community >> /etc/apk/repositories
RUN apk update && \
    apk --no-cache add \
        ca-certificates \
        cmake \
        g++ \
        make
ADD . ~/git/group_09
WORKDIR ~/git/group_09
RUN    cmake . && \
    	make ./msc_test && cp ./msc_test /tmp
RUN [ "cross-build-end" ]

# Deploy.
FROM pipill/armhf-alpine:edge
MAINTAINER Filip Fatic "gusfatfi@student.gu.se"
RUN [ "cross-build-start" ]
RUN cat /etc/apk/repositories && \
    echo http://dl-4.alpinelinux.org/alpine/v3.7/main > /etc/apk/repositories && \
    echo http://dl-4.alpinelinux.org/alpine/v3.7/community >> /etc/apk/repositories
RUN apk update && \
    apk --no-cache add \
    libstdc++ libgcc && \
    mkdir /opt
WORKDIR /opt
COPY --from=builder /tmp/msc_test .
RUN [ "cross-build-end" ]
#CMD ["./mvp_follow --cid=112 --verbose"]
